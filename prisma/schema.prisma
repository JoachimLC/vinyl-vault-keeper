generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Record {
  id        Int     @id @default(autoincrement())
  title     String
  artist    String
  year      Int
  label     String
  genre     String
  rating    Int     @default(0) // Set a default value for rating
  cover     String?
}

model User {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  password String
}
